{
  "name": "ForumReply",
  "type": "object",
  "properties": {
    "post_id": {
      "type": "string",
      "description": "ID of the forum post being replied to"
    },
    "content": {
      "type": "string",
      "description": "Reply content"
    },
    "author_name": {
      "type": "string",
      "description": "Name of the replier (optional)"
    },
    "parent_reply_id": {
      "type": "string",
      "description": "ID of parent reply if this is a nested reply"
    }
  },
  "required": [
    "post_id",
    "content"
  ]
}