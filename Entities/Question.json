{
  "name": "Question",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The question title"
    },
    "content": {
      "type": "string",
      "description": "Full question content"
    },
    "category": {
      "type": "string",
      "enum": [
        "theology",
        "prayer",
        "daily_life",
        "bible_study",
        "relationships",
        "faith_journey",
        "church_life",
        "other"
      ],
      "default": "other",
      "description": "Question category"
    },
    "is_anonymous": {
      "type": "boolean",
      "default": true,
      "description": "Whether the question is posted anonymously"
    },
    "view_count": {
      "type": "number",
      "default": 0,
      "description": "Number of times question was viewed"
    },
    "answer_count": {
      "type": "number",
      "default": 0,
      "description": "Number of answers received"
    }
  },
  "required": [
    "title",
    "content"
  ]
}